<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/stockDetailCellTitle"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:paddingBottom="10dp"
        android:singleLine="true"
        android:text="Title"
        android:textColor="#000"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/stockDetailCellContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/stockDetailCellTitle"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/stockDetailCellTitle"
        android:layout_toRightOf="@+id/stockDetailCellTitle"
        android:paddingBottom="10dp"
        android:text="Content"
        android:textColor="#000"
        android:textSize="16dp" />

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignTop="@+id/stockDetailCellContent"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/stockDetailCellContent"
        app:srcCompat="@android:color/transparent" />

</RelativeLayout>